@model Expense_Manager.Models.SavingsGoal

<h2 class="text-2xl font-bold mb-4">Create Savings Goal</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Goal Name</label>
        <input asp-for="GoalName" class="form-control" />
        <span asp-validation-for="GoalName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Target Amount</label>
        <input asp-for="TargetAmount" type="number" class="form-control" />
        <span asp-validation-for="TargetAmount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Target Date</label>
        <input asp-for="TargetDate" type="date" class="form-control" />
        <span asp-validation-for="TargetDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Goal</button>
</form>
